# Media Storage Configuration
# Set this to choose your primary storage provider
MEDIA_STORAGE_PROVIDER=whatsapp

# Optional: Set fallback storage provider
MEDIA_FALLBACK_STORAGE_PROVIDER=s3

# ===== WhatsApp Configuration =====
META_API_BASE_URL=https://graph.facebook.com/v21.0
ACCESS_TOKEN=your_whatsapp_access_token_here
PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# ===== Local Storage Configuration =====
LOCAL_UPLOAD_DIR=./uploads
LOCAL_BASE_URL=http://localhost:3001/media

# ===== Amazon S3 Configuration =====
S3_BUCKET=my-media-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=AKIA...
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
S3_ENDPOINT= # Optional: for custom S3-compatible services

# ===== Google Cloud Storage Configuration =====
GCS_BUCKET=my-media-bucket
GCS_PROJECT_ID=my-gcp-project-id
GCS_KEY_FILENAME=./service-account-key.json
GCS_CREDENTIALS= # Optional: JSON string of credentials

# ===== Fallback Storage Configuration =====
# These override the primary config when using fallback

# Fallback WhatsApp
FALLBACK_META_API_BASE_URL=https://graph.facebook.com/v21.0
FALLBACK_ACCESS_TOKEN=your_fallback_whatsapp_token
FALLBACK_PHONE_NUMBER_ID=your_fallback_phone_id

# Fallback Local
FALLBACK_LOCAL_UPLOAD_DIR=./backup-uploads
FALLBACK_LOCAL_BASE_URL=http://localhost:3001/backup-media

# Fallback S3
FALLBACK_S3_BUCKET=backup-media-bucket
FALLBACK_S3_REGION=us-east-1
FALLBACK_S3_ACCESS_KEY_ID=AKIA...
FALLBACK_S3_SECRET_ACCESS_KEY=your_fallback_s3_key

# Fallback GCS
FALLBACK_GCS_BUCKET=backup-media-bucket
FALLBACK_GCS_PROJECT_ID=backup-gcp-project
FALLBACK_GCS_KEY_FILENAME=./backup-service-account-key.json
FALLBACK_GCS_CREDENTIALS= # JSON string of fallback credentials
